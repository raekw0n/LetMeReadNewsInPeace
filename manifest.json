{
  "name": "Let Me Read News",
  "version": "1.0",
  "description": "Removes anti-ad blockers from The Metro and Daily Mail sites.",
  "permissions": ["activeTab", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/lmrn16.png",
      "32": "images/lmrn32.png"
    }
  },
  "icons": {
    "16": "images/lmrn16.png",
    "32": "images/lmrn32.png"
  },
  "manifest_version": 2
}
